<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.contacontes.kontakontes.Inici$Fragment1"
    android:background="@drawable/chillout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_icon_libro"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="CREA I EXPERIMENTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/imageView2"
        android:textAlignment="center" />

    <TextView
        android:text="Amb diferentes variables, crea un conte amb els teus personatges."
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
