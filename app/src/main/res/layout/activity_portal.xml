<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_portal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.contacontes.kontakontes.Portal"
    android:background="@drawable/chillout3">

    <TextView
        android:text="1.2.0.0 Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/version"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Creada per Oriol Alàs Cercós"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView5"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:text="Nous contes per visualitzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/actus1"
        android:layout_below="@+id/prox_actus"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:text="Accés via base de dades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actus2"
        android:layout_below="@+id/actus1"
        android:layout_alignLeft="@+id/actus1"
        android:layout_alignStart="@+id/actus1"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:text="Pròximes actualitzacions:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/prox_actus"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:text="Konta Kontes Application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="normal|bold"
        android:textSize="28sp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logok"
        android:id="@+id/imageView6"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"/>
</RelativeLayout>
