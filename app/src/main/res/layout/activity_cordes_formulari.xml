<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cordes_formulari"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.contacontes.kontakontes.CordesFormulari"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/emplena_formulari"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="33dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nom de la protagonista:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nomfprota"
                android:layout_alignBaseline="@+id/fld_nomfprota"
                android:layout_alignBottom="@+id/fld_nomfprota"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:text="Nom del protagonista:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomfprota"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:id="@+id/nommprota"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fld_nommprota"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_alignBaseline="@+id/nommprota"
                android:layout_alignBottom="@+id/nommprota"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/nommprota"
                android:layout_toRightOf="@+id/nommprota" />

            <TextView
                android:text="Escola dels protagonistes:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nommprota"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:id="@+id/escola"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fld_escola"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_alignBaseline="@+id/escola"
                android:layout_alignBottom="@+id/escola"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/escola"
                android:layout_toEndOf="@+id/escola" />

            <TextView
                android:text="Un joc o acciÃ³:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/escola"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:id="@+id/accio"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fld_accio"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_alignBaseline="@+id/accio"
                android:layout_alignBottom="@+id/accio"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Envia!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_enviacordes"
                android:layout_marginTop="55dp"
                android:layout_below="@+id/fld_accio"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fld_nomfprota"
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/nomfprota"
                android:layout_toEndOf="@+id/nomfprota" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
